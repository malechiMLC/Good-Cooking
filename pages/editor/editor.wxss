@import "../../common/lib/weui.wxss";
@import "./assets/iconfont.wxss";


.page{
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: #fff;
}

.editor-container {
  position: absolute; 
  top: 350rpx; 
  left: 0; 
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 100rpx;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  top: 250rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

.detail-item{
  display:flex;
  flex-direction:row;
  width:100%;
  justify-content: space-between;
}

.detail-input{
  width:76%;
  overflow: hidden;
  text-overflow: ellipsis;

}

.head-half{
  height:100%;
  width:47%;
  flex-direction:column;
  display:flex;
  justify-content:space-between;
  padding: 5rpx 0 5rpx 20rpx;
}

.audio{
  float: right;
  position: fixed;
  bottom: 140rpx;
  right: 80rpx; 
}