<view class="page">
<view class="head" style="height:200rpx;display:flex;justify-content: space-between;">
  <view class="head-half">
    <view class="detail-item">
      <text>菜名:</text>
      <input class="detail-input" placeholder="name" bindinput="inputTitle"></input>
    </view>
    <view class="detail-item">
      <text>难度:</text>
      <input class="detail-input" placeholder="difficulty" bindinput="inputDif"></input>
    </view>
    <view class="detail-item">
      <text>时间:</text>
      <input class="detail-input" placeholder="timeNeeded" bindinput="inputTime"></input>
    </view>
  </view>
  <view class="head-half">
    <view class="detail-item" style="height:33%;padding-top:3rpx;">
      <text>份量:</text>
      <input class="detail-input" placeholder="size" bindinput="inputSize"></input>
    </view>
    <view class="detail-item" style="height:64%;padding-top:7rpx;">
      <text>原料:</text>
      <textarea class="detail-input" style="height:80%;" placeholder="ingredients" bindinput="inputIng"></textarea>
    </view>
  </view>
</view>



<view class="toolbar" catchtouchend="format">
  <i class="iconfont icon-charutupian" catchtouchend="insertImage"></i>
  <i class="iconfont icon-format-header-2 {{formats.header === 2 ? 'ql-active' : ''}}" data-name="header" data-value="{{2}}"></i>
  <i class="iconfont icon-format-header-3 {{formats.header === 3 ? 'ql-active' : ''}}" data-name="header" data-value="{{3}}"></i>
  <i class="iconfont icon-zitijiacu {{formats.bold ? 'ql-active' : ''}}" data-name="bold"></i>
  <i class="iconfont icon-zitixieti {{formats.italic ? 'ql-active' : ''}}" data-name="italic"></i>
  <i class="iconfont icon-zitixiahuaxian {{formats.underline ? 'ql-active' : ''}}" data-name="underline"></i>
  <i class="iconfont icon--checklist" data-name="list" data-value="check"></i>
  <i class="iconfont icon-youxupailie {{formats.list === 'ordered' ? 'ql-active' : ''}}" data-name="list" data-value="ordered"></i>
  <i class="iconfont icon-wuxupailie {{formats.list === 'bullet' ? 'ql-active' : ''}}" data-name="list" data-value="bullet"></i>
</view>

<view class="editor-container" style="bottom:50px;">
  <editor id="editor" class="ql-container" placeholder="{{placeholder}}" bindstatuschange="onStatusChange" bindready="onEditorReady" bindblur="inputStep">
  </editor>
</view>

<view style="display:flex;flex-direction:row;position:fixed;bottom:0;height:100rpx;width:100%;">
  <button style="width:120px;height:80rpx;position:fixed;left:2px;font-size:16px;bottom:3px;" bindtap="exit">退出</button>
  <button style="width:120px;height:80rpx;position:fixed;right:2px;font-size:16px;bottom:3px;" bindtap="submit">发布</button>
</view>

</view>