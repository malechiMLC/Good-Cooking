/* pages/followlist/followlist.wxss */
.border{
  border: 2rpx solid black;
}

.flex-row{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.flex-column{
  display: flex;
  flex-direction: column;
}

.hori-center{
  display: flex;
  justify-content: center;
}

.ver-center{
  display: flex;
  align-content: center;
  align-items: center;
}

.space-around{
  display:flex;
  justify-content:space-around;
}

.space-between{
  display:flex;
  justify-content:space-between;
}

.profile{
  width:120rpx;
  height:120rpx ;
  border-radius: 50%;
  margin-left: 30rpx;
}

.item{
  padding-top:10px;
  padding-bottom:10px;
  border-bottom:#ddd 1px solid;
  background-color:white;
  text-align: center;
}

.name{
  font-size: large;
  color: #666;
  margin-left:20px;
  letter-spacing: 2px;
}

.sex-img{
  width: 20px;
  height: 20px;
  margin-left: 10px;
}

.bottom-text{
  color: #ccc;
  font-size: medium;
}