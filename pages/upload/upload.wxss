/* pages/upload/upload.wxss */

.camera{
  float: right;
  position: fixed;
  bottom: 30rpx;
  right: 20rpx; 
  width: 120rpx;
  height: 120rpx;
}

.mask{
  height:100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.2;
  display: flex;
  flex-direction: column;
}
.uploadDlg{
  width: 100%;
  height: 90%;
  position: fixed;
  margin-top: 200rpx;
  z-index: 9999;
  background-color: #fff;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.text{
  height: 350rpx;
  width: 95%;
  margin-bottom: 10px;
  font-size: 15px;
  padding: 0 10px;
  overflow: hidden;
  border-style: dashed;
  border-radius: 20rpx;
  border-color: #ddd;
}
.image{
  width:33%;
  height: 110px;
  padding-left: 10px ;
}
.moment_img{
  width: 98px;
  height: 98px;
} 
.image_content{
  height: 380rpx;
  width: 95%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10px;
  overflow: hidden;
}