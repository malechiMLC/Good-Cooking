/* custom-components/buttonflow/buttonflow.wxss */

.border{
  border: 2rpx solid black;
}

.flex-row{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.flex-column{
  display: flex;
  flex-direction: column;
}

.hori-center{
  display: flex;
  justify-content: center;
}

.ver-center{
  display: flex;
  align-content: center;
  align-items: center;
}

.blank{
  width: 100%;
  height: 60rpx;
}

.blank2{
  width: 100%;
  height: 20rpx;
}

.title-view{
  width: 700rpx;
  height: 70rpx;
  position: relative;
  left: 30rpx;
}

.title-text{
  font-size: medium;
}

.buttons-view{
  width: 700rpx;
  display: flex;
  flex-wrap: wrap;
  position: relative;
  left: 30rpx;
}

.total-button{
  height: 90rpx;
}

.space{
  width: 40rpx;
  height: 100%;
}

.button{
  border-radius: 25px;
  height: 60rpx;
  font-size: xx-small;
  font-weight: 400;
}

.blank3{
  width: 40rpx;
  height: 60rpx;

}